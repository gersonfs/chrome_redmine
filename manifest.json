{
  "manifest_version": 2,

  "name": "Chrome redmine integration",
  "description": "This extension allow integrate chrome with redmine",
  "version": "0.1",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}