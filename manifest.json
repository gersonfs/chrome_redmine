{
    "manifest_version": 2,
    "name": "Chrome redmine integration",
    "version": "0.1.0",
    "description": "This extension allow integrate chrome with redmine",
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/icon48.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "options_page": "options.html",
    "author": "Gerson Felipe Schwinn <gersonfs@gmail.com>",
    "homepage_url": "https://github.com/gersonfs"
}